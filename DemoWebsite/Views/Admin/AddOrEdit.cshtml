@model CMS
@{
    ViewData["Title"] = "Edit CMS";
}

<h1>@Model.Title</h1>

<form asp-controller="Admin" asp-action="Save" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input name="Id" type="hidden" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" type="text" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug" class="control-label"></label>
        <input asp-for="Slug" type="text" class="form-control" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" id="content" name="content" class="form-control" rows="20"></textarea>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="submit" value="Save" class="btn btn-primary btn-block" />
        </div>
        <div class="form-group col-md-6">
            <a asp-action="ManageCMS" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.16/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.16/dist/summernote.min.js"></script>
    <script>
        $('#content').summernote();
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}